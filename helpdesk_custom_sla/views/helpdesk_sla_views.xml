<odoo>
    <data>
        <!-- SLA Action -->
        <record id="helpdesk_sla_action" model="ir.actions.act_window">
            <field name="name">SLAs</field>
            <field name="res_model">helpdesk.sla</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- SLA Menuitem -->
        <menuitem
            name="SLAs"
            id="menu_helpdesk_sla"
            parent="helpdesk_mgmt.helpdesk_ticket_config_main_menu"
            action="helpdesk_sla_action"
            sequence="5"
        />

        <!-- SLA Form View -->
        <record id="view_helpdesk_sla_form" model="ir.ui.view">
            <field name="name">helpdesk.sla.form</field>
            <field name="model">helpdesk.sla</field>
            <field name="arch" type="xml">
                <form string="Helpdesk SLA">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="response_time"/>
                            <field name="resolution_time"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- SLA Tree View -->
        <record id="view_helpdesk_sla_tree" model="ir.ui.view">
            <field name="name">helpdesk.sla.tree</field>
            <field name="model">helpdesk.sla</field>
            <field name="arch" type="xml">
                <tree string="Helpdesk SLA">
                    <field name="name"/>
                    <field name="response_time"/>
                    <field name="resolution_time"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- SLA Field in Ticket Form View -->
        <record id="view_helpdesk_ticket_form_inherit_sla" model="ir.ui.view">
            <field name="name">helpdesk.ticket.form.inherit.sla</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='priority']" position="after">
                    <field name="sla_id"/>
                    <field name="time_to_response"/>
                    <field name="time_to_resolution"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>